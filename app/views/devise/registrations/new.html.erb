<div class="card mx-auto p-2" style="width: 18rem; border: 2px solid black; margin-top: 50px;">
  <div class="card-body">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group" id="email">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group" id="password">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters min)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group" id="confirmation">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-group" id="avatar">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <div class="p-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
