<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag avatar_image(message.user), size: '200x200',
            class: 'rounded-circle mx-auto d-block' %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= message.user.email %> at <%= message.timestamp %> says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>
