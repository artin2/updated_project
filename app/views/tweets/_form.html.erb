<div class="card mx-auto p-2" style="width: 18rem; border: 2px solid black; margin-top: 50px;">
  <div class="card-body">
    <%= form_with(model: tweet, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :text %><br/>
        <%= form.text_field :tweet_content, autofocus: true%>
      </div>

      <div class="form-group">
        <%= form.label :street %><br/>
        <%= form.text_field :street, autofocus: true%>
      </div>

      <div class="form-group">
        <%= form.label :city %><br/>
        <%= form.text_field :city, autofocus: true%>
      </div>

      <div class="form-group">
        <%= form.label :zip %><br/>
        <%= form.text_field :zip, autofocus: true%>
      </div>

      <div class="actions">
        <%= form.submit "Send"%>
      </div>
    <% end %>
  </div>
</div>
